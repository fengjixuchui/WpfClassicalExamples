<Window x:Class="L038.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L038"
        mc:Ignorable="d"
        x:Name="MyWindow"
        Title="MainWindow" Height="167" Width="274">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,25,0,0" TextWrapping="Wrap" Text="所在的部门" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="105,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Department, ElementName=MyWindow, Mode=OneWay}" />
        <TextBlock HorizontalAlignment="Left" Margin="40,45,0,0" TextWrapping="Wrap" Text="员工姓名" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="105,45,0,0" TextWrapping="Wrap" Text="{Binding PersonName, ElementName=MyWindow}" VerticalAlignment="Top" Width="120"/>
        <Button Content="提交" HorizontalAlignment="Left" Margin="50,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="重置" HorizontalAlignment="Left" Margin="140,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
