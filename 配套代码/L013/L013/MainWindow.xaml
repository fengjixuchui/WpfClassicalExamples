        <Image HorizontalAlignment="Left" Height="190" Margin="325,70,0,0" VerticalAlignment="Top" Width="100" Source="220x220.jpg" Stretch="UniformToFill"/>
        <Image HorizontalAlignment="Left" Height="190" Margin="430,70,0,0" VerticalAlignment="Top" Width="85" Source="220x220.jpg" StretchDirection="DownOnly"/>
        <Image x:Name="imageA" HorizontalAlignment="Left" Height="100" Margin="655,285,0,0" VerticalAlignment="Top" Width="100"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="50,285,0,0" VerticalAlignment="Top" Width="100" >
            <Image.Source>
                <BitmapImage UriSource="220x220.jpg" Rotation="Rotate270"/>
            </Image.Source>            
        </Image>

    </Grid>
</Window>
