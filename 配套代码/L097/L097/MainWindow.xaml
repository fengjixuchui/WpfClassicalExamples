<Window x:Class="L097.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L097"
        mc:Ignorable="d"
        Title="MainWindow" Height="152" Width="729">
    <StackPanel Margin="10">
        <TextBlock Text="请输入网址:" Foreground="Gray" Margin="5"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="address" Text="http://www.baidu.com" Width="300" Height="30" Margin="5"/>
            <Button x:Name="goButton" Content="打开" Padding="5" Margin="5" Width="100" Click="GoButton_Click" />
            <Button x:Name="frontButton" Content="前台" Padding="5" Margin="5" Width="100" Click="FrontButton_Click" />
            <Button x:Name="refreshButton" Content="刷新" Padding="5" Margin="5" Width="100" Click="RefreshButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
