<Window x:Class="L005.WindowDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L005"
        mc:Ignorable="d"
        Title="Win对话框" Height="207" Width="439" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock>这是一个对话框</TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" >
            <Button Content="Cancel" Margin="5" Padding="5" Width="100" Click="Button_Click_1"/>
            <Button Content="OK" Margin="5" Padding="5" Width="100" Click="Button_Click"/>
        </StackPanel>
        <TextBlock/>
    </DockPanel>
</Window>
