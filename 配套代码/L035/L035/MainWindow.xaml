<Window x:Class="L035.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L035"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="TabItem 1" >
                <TextBlock Background="#FFE5E5E5" Text="TabItem 1" FontSize="72" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
            <TabItem Header="TabItem 2">
                <TextBlock Background="#FFE5E5E5" Text="TabItem 2" FontSize="72" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
            <TabItem IsSelected="True">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="Green" Margin="0 1 8 0"/>
                        <TextBlock>TabItem 3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TextBlock Background="#FFE5E5E5" Text="TabItem 3" FontSize="72" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
