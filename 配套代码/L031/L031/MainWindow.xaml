<Window x:Class="L031.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L031"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Border BorderBrush="OrangeRed" BorderThickness="2" Margin="10,4">
            <TextBlock Text="第一个条文本消息" FontSize="22" FontWeight="Bold"/>
        </Border>
        <Border BorderBrush="OrangeRed" BorderThickness="2,3" Margin="10,4" CornerRadius="20">
            <TextBlock Text="第二个条文本消息" FontSize="22" FontWeight="Bold"/>
        </Border>
        <Border BorderBrush="OrangeRed" BorderThickness="2,3" Margin="10,4" CornerRadius="5" Background="Yellow">
            <TextBlock Text="第三个条文本消息" FontSize="22" FontWeight="Bold"/>
        </Border>
        <Border BorderBrush="OrangeRed" BorderThickness="5,0" Margin="10,4" CornerRadius="5" Background="Yellow">
            <TextBlock Text="第四个条文本消息" FontSize="22" FontWeight="Bold"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="240,170,0,0" VerticalAlignment="Top" Width="100"/>

    </StackPanel>
</Window>
